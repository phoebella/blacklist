{
  "manifest_version": 2,

  "name": "site blocker",
  "description": "An extension that block sites for a period of time set by user",
  "version": "1.0",
  "icons": {
    "16": "images/lock16.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "images/lock16.png"
  },
  "externally_connectable": {
    "matches":["*://example.com/*"]
  },
  "permissions": [
    "storage",
	  "tabs",
	  "contextMenus"
   ]
}
